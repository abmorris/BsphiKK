<RapidFit>
  // Appease RapidFit by providing unnecessary but mandatory XML tags
	<ParameterSet>
  </ParameterSet>
  <Minimiser>
    <MinimiserName>Minuit</MinimiserName>
  </Minimiser>
  <FitFunction>
    <FunctionName>NegativeLogLikelihood</FunctionName>
  </FitFunction>
  // Define the variables and their branch names
  <CommonPhaseSpace>
	  <PhaseSpaceBoundary>
      <Observable>
        <Name>mKK</Name>
        <TF1>BCON_KK_M</TF1>
        <Minimum>988</Minimum>
        <Maximum>1800</Maximum>
        <Unit>MeV/c^{2}</Unit>
      </Observable>
      <Observable>
        <Name>phi</Name>
		    <TF1>Phi_angle</TF1>
        <Minimum>-3.14159</Minimum>
        <Maximum>3.14159</Maximum>
        <Unit>rad</Unit>
      </Observable>
      <Observable>
        <Name>ctheta_1</Name>
		    <TF1>cos_theta1</TF1>
        <Minimum>-1.0</Minimum>
        <Maximum>1.0</Maximum>
        <Unit>Unitless</Unit>
      </Observable>
      <Observable>
        <Name>ctheta_2</Name>
		    <TF1>cos_theta2</TF1>
        <Minimum>-1.0</Minimum>
        <Maximum>1.0</Maximum>
        <Unit>Unitless</Unit>
      </Observable>
    </PhaseSpaceBoundary>
  </CommonPhaseSpace>
  
	<ToFit>
    // Choose the PDF
  	<PDF>
		  <Name>Bs2PhiKKTotal</Name>
    </PDF>
		<PDFConfigurator>
		</PDFConfigurator>
		<DataSet>
			<Source>File</Source>
			<FileName>/afs/cern.ch/work/a/admorris/BsphiKK/ntuples/BsphiKK_MC_1800_mvacut.root</FileName>
			<NTuplePath>DecayTree</NTuplePath>
			<NumberEvents>100000</NumberEvents>
			<CommonPhaseSpace>
			</CommonPhaseSpace>
		</DataSet>
	</ToFit>
</RapidFit>
